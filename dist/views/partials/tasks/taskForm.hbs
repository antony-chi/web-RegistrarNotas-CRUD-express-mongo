<div class="card card-body p-4 rounded-0 bg-dark text-white">
  <h3>Add a New Task</h3>
  <form action="/task/add" method="POST">
    <div>
      <label for="title">Write a title:</label>
      <input
        id="title"
        class="form-control rounded-2 text-black"
        type="text"
        name="title"
        placeholder="title" autofocus
      />
    </div>
    <div>
      <label for="description">Description: </label>
      <textarea
        id="description"
        class="form-control rounded-2 text-black"
        name="description"
        placeholder="description"
      ></textarea>
    </div>

    <button class="btn btn-primary btn-sm mt-4">Add</button>

  </form>
</div>