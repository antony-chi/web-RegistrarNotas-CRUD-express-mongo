{{#if tasks}} <!-- ponemos un if para indicar, si tasks contiene datos, muestra la tabla-->
  <table class="table table-bordered table-hover table-dark">
    <thead>
      <tr>
        <th>N.</th>
        <th>Title</th>
        <th>Description</th>
        <th>Operations</th>
      </tr>
    </thead>
    <tbody>
      {{#each tasks}} <!-- #each para recorerr un arreglo en HANDLEBARS-->
      <tr>
        <td>{{@index}}</td>
        <td>{{title}}</td>
        <td>{{description}}</td>
        <td>
          {{#if done}} <!-- if para cambiar el boton que dice DONE a UNDONE en la vista-->
            <a href="/task/{{_id}}/toggleCheckDone" class="btn btn-warning">Undone</a>
          {{else}}
            <a href="/task/{{_id}}/toggleCheckDone" class="btn btn-success">Done</a>
          {{/if}}

          <a href="/task/{{_id}}/delete" class="btn btn-danger">Delete</a>
          <a href="/task/{{_id}}/edit" class="btn btn-info">Update</a>
        </td>
      </tr>
    {{/each}}
    </tbody>
  </table>
{{else}}<!-- else si no se encontra datos que mostrar, renderisa lo siguiente:-->
    <div class="h-100 d-flex align-items-center justify-content-center">
      <div class="text-center text-white">
        <h1>No Tasks</h1>
        <img src="/icon/writing.png" class="w-75">
      </div>
    </div>
{{/if}}
